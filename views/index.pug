extends layout

block content
  .main.container
    .row
      .col-md-6.col-md-offset-3
        h1.display-4.m-b-2 Log In
        span (Admin creds: admin / admin@admin.com)
        br
        br
        if error
          .alert.alert-danger.error-msg(role="alert")=error
        form(method='POST' action='/login')
          div.form-group
            label(for='name') Name
            input.form-control(type='text' id='name' placeholder='name' name='name')
          div.form-group
            label(for='email') Email
            input.form-control(type='text' id='email' placeholder='email' name='email')
          button.btn.btn-primary(type='submit') Log In
