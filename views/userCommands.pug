extends layout

block content
  .main.container.clearfix
    .row
      .col-md-12
        h1.display-4.m-b-2 !{title}

        table.table.table-bordered.table-dark.commands-table
          thead
            tr
              th Command
              th Created date
              th Sender
              th Action
          tbody
            each command in commands
              tr
                th=command.command
                th=moment(command.created_date).format('dddd Do of MMMM YYYY h:mm:ss a')
                th=command.sender.name
                th
                  button.btn.btn-primary.btn-sm.run-command-btn(type='button', command-text=command.command) Run
block append scripts
  script(src='js/commands.js')
